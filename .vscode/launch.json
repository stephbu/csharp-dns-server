{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "dns-cli: Launch DNS server",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "dotnet: build solution",
            "program": "${workspaceFolder}/dns-cli/bin/Debug/net8.0/dns-cli.dll",
            "args": [
                "./appsettings.json"
            ],
            "cwd": "${workspaceFolder}/dns-cli",
            "console": "integratedTerminal",
            "stopAtEntry": false
        },
        {
            "name": ".NET Attach",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}",
            "cwd": "${workspaceFolder}"
        }
    ]
}
